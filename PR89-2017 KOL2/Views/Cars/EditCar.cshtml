@using PR89_2017_KOL2.Models
@{
    ViewBag.Title = "EditCar";
}

<h2>Edit Car</h2>
<div class="container">
    <div class="row">
        <div class="col-md-4">
            <div class="form_main">
                <h4 class="heading"><strong>Dodaj</strong> vozilo </h4>
                <div class="form">
                    @{Vozilo vozilo = ViewBag.Vozilo; }
                    <form action="EditCarMethod" method="post">
                        <input type="number" value="@vozilo.Id" name="id" hidden />
                        <input type="text" placeholder="Marka" value="@vozilo.Marka" name="marka" class="txt">
                        <input type="text" placeholder="Model" value="@vozilo.Model" name="model" class="txt">
                        <input type="text" placeholder="Oznaka sasije" value="@vozilo.OznakaSasije" name="oznakaSasije" class="txt">
                        <input type="text" placeholder="Boja" value="@vozilo.Boja" name="boja" class="txt">
                        <input type="text" placeholder="Broj vrata" value="@vozilo.BrojVrata" name="brojVrata" class="txt">
                        <input type="text" placeholder="Cena" value="@vozilo.Cena" name="cena" class="txt">
                        <select class="form-control" id="vrstaGoriva" name="vrstaGoriva">
                            @foreach (Fuel f in Enum.GetValues(typeof(Fuel)))
                            {
                                if (vozilo.VrstaGoriva.Equals(f))
                                {
                                    <option selected="selected">@f</option>
                                }
                                else
                                {
                                    <option>@f</option>
                                }
                            }

                        </select>
                        <textarea placeholder="Opis" name="opis" type="text" class="txt_3">@vozilo.Opis</textarea>
                        <input type="submit" value="submit" name="submit" class="txt2">
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
