@using PR89_2017_KOL2.Models
@{
    ViewBag.Title = "Cars";
}
<h2>Automobili</h2>
<div>
    @ViewBag.Message
</div>

<div class="container">
    <div class="row col-lg-12 col-md-offset custyle">
        <table class="table table-striped custab">
            <thead>
                <!-- <a href="#" class="btn btn-primary btn-xs pull-right"><b>+</b> Add new categories</a> -->
                <tr>
                    <th>ID</th>
                    <th>Marka</th>
                    <th>Model</th>
                    <th>Oznaka sasije</th>
                    <th>Boja</th>
                    <th>Broj vrata</th>
                    <th>Opis</th>
                    <th>Vrsta Goriva</th>
                    <th>Cena</th>
                    <th>Na stanju</th>
                    <th class="text-center">Action</th>
                </tr>
            </thead>
            @foreach (Vozilo vozilo in ViewBag.Vozila.Values)
            {
                <tr>
                    <td>@vozilo.Id</td>
                    <td>@vozilo.Marka</td>
                    <td>@vozilo.Model</td>
                    <td>@vozilo.OznakaSasije</td>
                    <td>@vozilo.Boja</td>
                    <td>@vozilo.BrojVrata</td>
                    <td>@vozilo.Opis</td>
                    <td>@vozilo.VrstaGoriva</td>
                    <td>@vozilo.Cena</td>
                    <td>@vozilo.NaStanju</td>
                    <td class="text-center"><a class='btn btn-info btn-xs' href="#"><span class="glyphicon glyphicon-edit"></span> Edit</a> <a href="#" class="btn btn-danger btn-xs"><span class="glyphicon glyphicon-remove"></span> Del</a></td>
                </tr>
            }
        </table>
    </div>
</div>

